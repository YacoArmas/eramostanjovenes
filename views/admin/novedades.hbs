<div class="container" id="signout" >
  <!-- Content here -->
  <div class="row">
    <p class="text-end">Hola
      {{usuario}}!
      <a class="btn btn-danger" href="/admin/login/logout">Sign Out
        <i class="far fa-hand-spock"></i>
      </a></p>
  </div>
</div>

<div id="novedades-header" class="row">
  <div id="novedades-title" class="col-7">
    <h2>Novedades</h2>
  </div>
  <div class="col-5 text-end">
    <a href="/admin/novedades/agregar" class="btn btn-light"><i class="far fa-plus-square"></i></i>Nuevo</a>
  </div>
 </div>
<!-- Table -->

<div class="row" id="table">
  <div class="col" >
    <table class="table table-striped table-hover">
      <thead>
        <tr class="table-dark">
          <th scope="col">#</th>
          <th scope="col">Titulo</th>
          <th scope="col" class="text-end">Acciones</th>
        </tr>
      </thead>
      <tbody>
        {{#each novedades}}
        <tr class="table-light">
          <th scope="row">{{id}}</th>
          <td>{{titulo}}</td>
          <td class="text-end">
            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary"><i class="fas fa-feather-alt"></i></a>
            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"><i class="fas fa-dumpster"></i></a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
